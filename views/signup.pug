extends base

block content
	if isLoggedIn
		.d-flex.flex-column.justify-content-center.align-items-center.min-vh-100.text-center
			p(style='font-size: 1.5rem;') You are already logged in.
			//- You can add more content or links here for logged-in users
	else
		.d-flex.flex-column.justify-content-center.align-items-center.min-vh-100.text-center
			//- Signup form
			form(action='/signup', method='post')
				.mb-5
					label(class='form-label', style='font-size: 4rem;') Sign up
				.mb-3
					label(for='name', class='form-label', style='font-size: 1.5rem;') Name
					input#name.form-control(type='text', name='name', placeholder='Enter your name', required, style='font-size: 1.5rem;')
				.mb-3
					label(for='email', class='form-label', style='font-size: 1.5rem;') Email
					input#email.form-control(type='email', name='email', placeholder='Enter your email', required, style='font-size: 1.5rem;')
				.mb-3
					label(for='password', class='form-label', style='font-size: 1.5rem;') Password
					input#password.form-control(type='password', name='password', placeholder='Enter your password', required, style='font-size: 1.5rem;')
				button.btn.btn-primary(type='submit', style='font-size: 1.5rem;') Sign up
				.mb-3
					label(class='form-label', style='width:300px; font-size: 1.5rem;') #{feedback}

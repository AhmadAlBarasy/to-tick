extends base
block content
	if isLoggedIn
		.d-flex.flex-column.justify-content-center.align-items-center.min-vh-100.text-center
			p(style='font-size: 1.5rem;') You are already logged in.
			//- You can add more content or links here for logged-in users
	else
		.d-flex.flex-column.justify-content-center.align-items-center.min-vh-100.text-center
			//- Login form
			form(action=`/resetPassword?resetToken=${resetToken}`, method='post')
				.mb-5
					label(class='form-label', style='font-size: 4rem;') Enter your new Password
				.mb-3
					label(for='password', class='form-label', style='font-size: 1.5rem;') New Password
					input#password.form-control(type='password', name='password', placeholder='New Password', required, style='font-size: 1.5rem;')
				button.btn.btn-primary(type='submit', style='font-size: 1.5rem;') Reset
				.mb-3
					label(class='form-label', style='font-size: 1.5rem;') #{feedback}